extends ../../pug/layouts/default

block page-vars
    -
        var meta = {
            lang: 'en',
            title: 'Articles | Blogcrypto',
            h1: 'Articles',
            description: '',
            keywords: '',
            type: 'website', //- website, article, audio, video
            url: PROJECT_URL + 'articles',
            image: PROJECT_URL + 'public/images/main.jpg'
        }
        var navBar = {
            currentUrl: 'categories',
            list: [
                {
                    value: 'categories',
                    title: 'Categories',
                    url: '/categories'
                },
                {
                    value: 'market',
                    title: 'Market',
                    url: '/market'
                },
                {
                    value: 'portfolio',
                    title: 'Portfolio',
                    url: '/portfolio'
                },
            ]
        }
        var breadcrumbsList = [
            {
                title: 'Categories',
                url: 'categories'
            },
            {
                title: 'Articles',
                url: ''
            }
        ]
        var data = [
            {
                url: 'articles/best-bitcoin-trading-platform',
                title: 'Best bitcoin trading platform',
                img: '../public/images/test2.jpg',
                alt: ''
            }
        ]

block main
    section.mb-4
        .container
            h1.mb-2.mt-5.display-6= meta.h1

            +breadcrumbs(breadcrumbsList, meta.lang)

            if (data)
                .row
                    each item in data
                        .col-sm-6.col-lg-4.col-xl-3.mb-4(style="display: flex")
                            +card(item.url, item.title, item.img, item.alt)
