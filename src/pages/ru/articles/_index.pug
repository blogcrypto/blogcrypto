extends ../../../pug/layouts/default

block page-vars
    -
        var meta = {
            lang: 'ru',
            title: 'Статьи | Blogcrypto',
            h1: 'Статьи',
            description: '',
            keywords: '',
            type: 'website', //- website, article, audio, video
            url: PROJECT_URL + 'ru/articles',
            image: PROJECT_URL + 'public/images/main.jpg'
        }
        var navBar = {
            currentUrl: 'categories',
            list: [
                {
                    value: 'categories',
                    title: 'Категории',
                    url: '/ru/categories'
                },
                {
                    value: 'market',
                    title: 'Курс криптовалют',
                    url: '/ru/market'
                },
                {
                    value: 'portfolio',
                    title: 'Портфолио',
                    url: '/ru/portfolio'
                },
            ]
        }
        var breadcrumbsList = [
            {
                title: 'Категории',
                url: '/ru/categories'
            },
            {
                title: 'Статьи',
                url: ''
            }
        ]
        var data = [
            {
                url: '/ru/articles/luchshie-birzhi-kriptovalyut',
                title: 'Лучшие биржи криптовалют',
                img: '/public/images/test2.jpg',
                alt: ''
            }
        ]

block main
    section.mb-4
        .container
            h1.mb-2.mt-5.display-6= meta.h1

            +breadcrumbs(breadcrumbsList, meta.lang)

            if (data)
                .row
                    each item in data
                        .col-sm-6.col-lg-4.col-xl-3.mb-4(style="display: flex")
                            +card(item.url, item.title, item.img, item.alt)
