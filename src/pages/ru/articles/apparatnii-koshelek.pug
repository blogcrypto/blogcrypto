extends ../../../pug/layouts/default

block page-vars
    -
        var meta = {
            path: '../../',
            lang: 'ru',
            title: 'Аппаратный кошелек для криптовалюты| Trezor | Ledger | Keepkey',
            h1: 'Аппаратный кошелек',
            description: 'Холодные кошельки для криптовалюты Ledger Nano S, Ledger Nano X, Trezor One, Trezor T, Keepkey цены, различие. Лучший аппаратный кошелек для хранения криптовалюты.',
            keywords: 'аппаратные кошельки, Ledger Nano S цена, Ledger Nano X цена, Trezor One цена, Trezor T цена, Keepkey цена',
            type: 'article', //- website, article, audio, video
            url: PROJECT_URL + '/ru/articles/apparatnii-koshelek',
            image: PROJECT_URL + '/public/images/hardware-wallets/hardware-wallets.jpg'
        }
        var navBar = {
            currentUrl: 'blog',
            list: [
                {
                    value: 'portfolio',
                    title: 'Портфолио',
                    url: meta.path + '/ru/portfolio'
                },
                {
                    value: 'market',
                    title: 'Курс криптовалют',
                    url: meta.path + '/ru/market'
                },
                {
                    value: 'converter',
                    title: 'Конвертер',
                    url: meta.path + '/ru/converter'
                },
                {
                    value: 'blog',
                    title: 'Блог',
                    url: meta.path + '/ru/blog'
                },
                {
                    value: 'about',
                    title: 'О нас',
                    url: meta.path + '/about'
                },
            ]
        }
        var breadcrumbsList = [
            {
                title: 'Категории',
                url: meta.path + '/ru/blog'
            },
            {
                title: 'Статьи',
                url: meta.path + '/ru/articles'
            },
            {
                title: meta.h1,
                url: ''
            }
        ]

block main
    section
        .container
            h1.mb-2.mt-5.display-6= meta.h1

            +breadcrumbs(breadcrumbsList, meta.lang, meta.path)

            .row
                .col-lg-9.col-xl-8.mb-4

                    .row.align-items-center
                        .col.pb-2

                            +date(meta.lang, meta.path, '19.12.2020')

                        .col-auto.pb-2

                            +share(meta.lang)

                    .mb-5
                        picture
                            source(srcset= meta.path + "public/images/hardware-wallets/hardware-wallets.jpg 2x, " + meta.path + "public/images/hardware-wallets/hardware-wallets_sm.jpg 1x", media="(max-width: 768px)")
                            source(srcset= meta.path + "public/images/hardware-wallets/hardware-wallets@2x.jpg 2x, " + meta.path + "public/images/hardware-wallets/hardware-wallets.jpg 1x")
                            img(src= meta.path + "public/images/hardware-wallets/hardware-wallets.jpg", alt="Аппаратные кошельки")

                    div !{require('../../../content/ru/apparatnii-koshelek.md')}

                .col-lg-3.offset-xl-1
                    include ../../../components/aside/ru/aside-1

block scripts
    script(src="https://yastatic.net/share2/share.js")
