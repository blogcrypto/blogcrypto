extends ../../../pug/layouts/default

block page-vars
    -
        var meta = {
            path: '../../',
            lang: 'ru',
            title: 'BC Portfolio | Подробное руководство Blog Crypto Portfolio',
            h1: 'Руководство пользователя BC Portfolio',
            description: 'Пошаговая инструкция по работе с криптовалютным портфолио BC Portfolio. Подробное руководство по приложению Blog Crypto Portfolio.',
            keywords: 'инструкция по крипто портфолио BC Portfolio, руководство по криптовалютному портфолио, о приложении BC Portfolio',
            type: 'article', //- website, article, audio, video
            url: PROJECT_URL + '/ru/guides/rukovodstvo-polzovatelya-bc-portfolio',
            image: PROJECT_URL + '/public/images/portfolio/portfolio.jpg'
        }
        var navBar = {
            currentUrl: 'blog',
            list: [
                {
                    value: 'portfolio',
                    title: 'Портфолио',
                    url: meta.path + '/ru/portfolio'
                },
                {
                    value: 'market',
                    title: 'Курс криптовалют',
                    url: meta.path + '/ru/market'
                },
                {
                    value: 'converter',
                    title: 'Конвертер',
                    url: meta.path + '/ru/converter'
                },
                {
                    value: 'blog',
                    title: 'Блог',
                    url: meta.path + '/ru/blog'
                },
                {
                    value: 'about',
                    title: 'О нас',
                    url: meta.path + '/about'
                },
            ]
        }
        var breadcrumbsList = [
            {
                title: 'Категории',
                url: meta.path + '/ru/blog'
            },
            {
                title: 'Руководства',
                url: meta.path + '/ru/guides'
            },
            {
                title: meta.h1,
                url: ''
            }
        ]

block main
    section
        .container
            h1.mb-2.mt-5.display-6= meta.h1

            +breadcrumbs(breadcrumbsList, meta.lang, meta.path)

            .row
                .col-lg-9.col-xl-8.mb-4

                    .row.align-items-center
                        .col.pb-2

                            +date(meta.lang, meta.path, '08.12.2020')

                        .col-auto.pb-2

                            +share(meta.lang)

                    .mb-5
                        picture
                            source(srcset= meta.path + "public/images/portfolio/portfolio.jpg 2x, " + meta.path + "public/images/portfolio/portfolio_sm.jpg 1x", media="(max-width: 768px)")
                            source(srcset= meta.path + "public/images/portfolio/portfolio@2x.jpg 2x, " + meta.path + "public/images/portfolio/portfolio.jpg 1x")
                            img(src= meta.path + "public/images/portfolio/portfolio.jpg", alt="Приложение BC Portfolio")

                    div !{require('../../../content/ru/rukovodstvo-polzovatelya-bc-portfolio.md')}

                .col-lg-3.offset-xl-1
                    include ../../../components/aside/ru/aside-1

block scripts
    script(src="https://yastatic.net/share2/share.js")
