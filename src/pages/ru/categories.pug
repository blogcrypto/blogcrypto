block main
    section.mb-4
        .container
            h1.mb-2.mt-5.display-6= meta.h1

            +breadcrumbs(breadcrumbsList, meta.lang)

            if (data)
                .row
                    each item in data
                        .col-sm-6.col-lg-4.col-xl-3.mb-4(style="display: flex")
                            +card(item.url, item.title, item.img, item.alt)

            //-if (categoriesList)
                .row
                    each item in categoriesList
                        .col-md-6.col-xxl-3.mb-4(style="display: flex")
                            +category(item.url, item.img, item.alt, item.title, item.desc)
