            type: 'website', //- website, article, audio, video
            url: PROJECT_URL + 'ru/categories',
            image: PROJECT_URL + 'public/images/main.jpg'
        }
        var navBar = {
            currentUrl: 'categories',
            list: [
                {
                    value: 'categories',
                    title: 'Категории',
                    url: '/ru/categories'
                },
                {
                    value: 'market',
                    title: 'Курс криптовалют',
                    url: '/ru/market'
                },
                {
                    value: 'portfolio',
                    title: 'Портфолио',
                    url: '/ru/portfolio'
                },
                {
                    value: 'about',
                    title: 'О нас',
                    url: '/ru/about'
                },
            ]
        }
        var breadcrumbsList = [
            {
                title: 'Категории',
                url: ''
            }
        ]
        // var categoriesList = [
        //     {
        //         url: '/ru/articles',
        //         img: '/public/images/test2.jpg',
        //         alt: '',
        //         title: 'Статьи',
        //         desc: 'Обзоры монет и криптовалютных бирж'
