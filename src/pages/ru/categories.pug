        // ]
        var data = [
            {
                url: '/ru/articles/luchshie-birzhi-kriptovalyut',
                title: 'Лучшие биржи криптовалют',
                img: {
                    x1: '/public/images/exchanges/exchanges-main_sm.jpg',
                    x2: '/public/images/exchanges/exchanges-main.jpg',
                },
                alt: 'Криптовалютные биржи'
            },
            {
                url: '/ru/guides/rukovodstvo-polzovatelya-bc-portfolio',
