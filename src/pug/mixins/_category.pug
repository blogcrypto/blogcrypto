mixin category(url, img, alt, title, desc)
    a.card.card-overlay(href= url)
        picture
            source(srcset=img.x2 + " 2x, " + img.x1 + " 1x")
            img.card-img(src= img.x1, alt= alt, style="object-fit: cover; height: 200px")
        .card-img-overlay
            h2.card-title= title
            p.card-text= desc
