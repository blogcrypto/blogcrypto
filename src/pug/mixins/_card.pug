mixin card(url, title, img, alt, category, label)
    a.card(href= url)
        .card-img-top
            picture
                source(data-srcset=img.x2 + " 2x, " + img.x1 + " 1x")
                img.lazy(data-src= img.x1, alt= alt, style="object-fit: cover; height: 200px")

            if (category)
                - var color = '#0d6efd';

                if (category.toLowerCase() === 'guides' || category.toLowerCase() === 'руководства')
                    - var color = '#198754';

                //-if (category.toLowerCase() === 'guides' || category.toLowerCase() === 'руководства')
                    - var color = 'red';

                .card-category
                    span(style=`background-color:${color}`)= category


        .card-body
            .h5.card-title= title

        if (label)
            .card-label-list
                each item in label
                    .card-label-item
                        span(style=`background-color:${item.color || "#0d6efd"}`)= item.title
